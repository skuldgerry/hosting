name: Trigger Custom Workflow

on:
  workflow_dispatch:

jobs:
  trigger-workflow:
    runs-on: ubuntu-latest
    steps:
      - name: Trigger Custom Workflow
        run: |
          curl -X POST \
          -H "Accept: application/vnd.github.v3+json" \
          -H "Authorization: Bearer ${{ secrets.GITHUB_TOKEN }}" \
          https://api.github.com/repos/skuldgerry/hosting/actions/workflows/Linux/Scripts/Post%20Install/Ubuntu/Workflows/update.yml/dispatches \
          -d '{"ref":"main"}'
